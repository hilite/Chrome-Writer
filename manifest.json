{
	"name": "ChromeWriter",
	"manifest_version": 2,
	"version": "0.1.1",
	"description": "Text to HTML Form by using name tags",
	"icons": {
		"16": "icon/i16.png",
		"32": "icon/i32.png",
		"48": "icon/i48.png",
		"64": "icon/i64.png",
		"128": "icon/i128.png"
	},

	"browser_action": {
		"default_icon": "icon/i64.png",
		"default_title": "ChromeWriter",
		"default_popup": "popup.html"
   },

	"options_page": "options.html",
   
	"permissions": [ 
		"tabs", 
		"http://*/*", 
		"https://*/*" 
	]
}
